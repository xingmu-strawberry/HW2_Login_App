<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp" >

    <!-- 欢迎登录标题 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="40dp"
        android:gravity="start" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎登录"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请登录您的账户"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <include
        layout="@layout/item_login_email"
        android:id="@+id/email_input_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <include
        layout="@layout/item_login_secret"
        android:id="@+id/password_input_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/tv_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="忘记密码?"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:gravity="right"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="12dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:text="登录"
        android:textColor="@color/white"
        android:layout_marginTop="32dp"/>

    <!-- 添加分割线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="或者"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <!-- 微信登录按钮 -->
        <LinearLayout
            android:id="@+id/btn_wechat"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#07C160"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_wechat"
                android:scaleType="fitCenter"
                android:tint="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信登录"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Apple登录按钮 -->
        <LinearLayout
            android:id="@+id/btn_apple"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@android:color/black"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginStart="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_apple"
                android:scaleType="fitCenter"
                android:tint="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apple登录"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="还没有账户？立即注册"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:focusable="true"/>

</LinearLayout>